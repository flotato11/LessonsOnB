//- team classic
mixin team-classic(obj)
	.team-classic
		.team-classic-figure
			+jpg(obj.img)
			ul.team-classic-soc-list
				li: a(href='#').icon.icon-md.mdi.mdi-facebook
				li: a(href='#').icon.icon-md.mdi.mdi-instagram
				li: a(href='#').icon.icon-md.mdi.mdi-twitter
		.team-classic-caption
			h4: a(href='instructor-page.html').team-name=obj.name
			p=obj.text
			
//- team modern
mixin team-modern(obj)
	.team-modern(class=obj.classMod)
		.team-modern-figure
			if(obj.classMod == 'team-modern-no-img')
				+jpg('team-classic-7-391x252')
			else
				+jpg(obj.img)
			ul.team-modern-soc-list
				li: a(href='#').icon.icon-lg.fa-facebook
				li: a(href='#').icon.icon-lg.fa-instagram
				li: a(href='#').icon.icon-lg.fa-twitter
		.team-modern-caption
			h4: a(href='instructor-page.html').team-name=obj.name
			p=obj.text
			
